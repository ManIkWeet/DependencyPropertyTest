<UserControl x:Class="DPTest.UserControls.TestControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DPTest.UserControls"
             mc:Ignorable="d" 
             x:Name="TestElement"
             d:DesignHeight="100" d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <Label Grid.Column="0" Grid.Row="0" Background="White" Content="DefaultNull: " />
        <Label Grid.Column="0" Grid.Row="1" Background="White" Content="DefaultFalse: " />
        <TextBlock Grid.Column="1" Grid.Row="0" Width="100" Background="White" Foreground="Black" x:Name="TextBlockDefaultNull" 
                   Text="{Binding Path=DefaultNullObject,ElementName=TestElement}" />
        <TextBlock Grid.Column="1" Grid.Row="1" Width="100" Background="White" Foreground="Black" x:Name="TextBlockDefaultFalse" 
                   Text="{Binding Path=DefaultFalseObject,ElementName=TestElement}" />
    </Grid>
</UserControl>
